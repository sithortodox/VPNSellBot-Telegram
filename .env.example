# Токен Telegram-бота
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Строка подключения к базе данных (PostgreSQL + asyncpg)
DATABASE_URL=postgresql+asyncpg://db_user:db_password@localhost:5432/vpnsell

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Интервал анти-флуда: число секунд между обработкой сообщений от одного пользователя
THROTTLE_RATE=1.0

# Список Telegram ID администраторов через запятую
ADMIN_IDS=123456789,987654321

# Количество элементов на страницу по умолчанию
DEFAULT_PAGE_SIZE=10
